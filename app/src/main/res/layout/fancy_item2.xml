<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="-25dp"
    android:background="@drawable/test_view01"
    android:layout_height="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="23dp"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fancy_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_timer"
            android:drawablePadding="5dp"
            android:paddingEnd="8dp"
            android:paddingStart="10dp"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:text="@string/premium_cricket"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:fontFamily="@font/heebo_bold"
            />

        <RelativeLayout
            android:layout_width="50dp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:background="@drawable/test_view03"
            android:layout_height="30dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_ques"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>