<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.refer_earn.MyCommissionFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_8_shape_black"
                android:backgroundTint="@color/grey_dark"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/available_referral_ncommission"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="₹ 5.00"
                    android:textColor="@color/base_color_yellow"
                    android:textSize="20sp"
                    app:fontFamily="@font/heebo_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_claim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_8_shape_black"
                    android:backgroundTint="@color/base_color_blue"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:text="@string/claim"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_commission_to_redeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_8_shape_black"
                android:backgroundTint="@color/grey_dark"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/commission_to_redeem"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_8_shape_grey_solid"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="5dp"
                    android:paddingStart="12dp"
                    android:text="₹"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_redeem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_8_shape_black"
                    android:backgroundTint="@color/base_color_yellow"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="@string/redeem"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_8_shape_grey_solid"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_commission_to_redeem">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey_dark"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/id" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_grey_dark"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_id"
                    tools:text="@string/referral_code" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_code"
                    tools:src="@drawable/sexybcrt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_4_corner_shape"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_share2"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:text="@string/share_now"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_qr" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_8_black_corner_border"
                android:padding="25dp"
                app:layout_constraintTop_toBottomOf="@id/cl_qr">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_referral_bonus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/referral_bonus"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toStartOf="@id/tv_expired_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expired_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/expired_date"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_referral_bonus"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_20_rounded_grey"
                    android:backgroundTint="@color/grey_dark"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_referral_bonus">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_free_bonus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/free_bonus"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_free_bonus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_8_shape_grey_solid"
                        android:backgroundTint="@color/text_grey"
                        android:paddingVertical="5dp"
                        android:paddingStart="12dp"
                        android:text="0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_free_bonus" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/deposit"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_free_bonus" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_8_shape_grey_solid"
                        android:backgroundTint="@color/text_grey"
                        android:paddingVertical="5dp"
                        android:paddingStart="12dp"
                        android:text="0.00 / 0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_deposit" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_turnover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/turnover"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_deposit" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_turnover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_8_shape_grey_solid"
                        android:backgroundTint="@color/text_grey"
                        android:paddingVertical="5dp"
                        android:paddingStart="12dp"
                        android:text="0.00 / 0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_turnover" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_referral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_20_rounded_grey"
                    android:backgroundTint="@color/bg_grey"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_layout">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_your_referral_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_referral_status"
                        android:textSize="16sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_friend_accepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="@string/friend_s_naccepted"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintEnd_toStartOf="@id/view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_your_referral_status" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/black"
                        app:layout_constraintBottom_toBottomOf="@id/tv_friend_accepted"
                        app:layout_constraintEnd_toStartOf="@id/tv_friend_complete"
                        app:layout_constraintStart_toEndOf="@id/tv_friend_accepted"
                        app:layout_constraintTop_toTopOf="@id/tv_friend_accepted" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_friend_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/friend_ncomplete"
                        android:textSize="14sp"
                        app:fontFamily="@font/heebo_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view"
                        app:layout_constraintTop_toTopOf="@id/tv_friend_accepted" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_download_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_8_shape_grey_solid"
                    android:backgroundTint="@color/bg_grey"
                    android:paddingHorizontal="8dp"
                    android:text="@string/download_report"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_referral" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_referral_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/bg_8_shape_grey_solid"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:text="@string/referral_report"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_redeem_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_border" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_redeem_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/bg_8_shape_grey_solid"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:text="@string/redeem_history"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_referral_report"
                app:layout_constraintTop_toBottomOf="@id/cl_border" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>