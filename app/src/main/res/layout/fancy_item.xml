<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="-23dp"
    android:background="@drawable/test_view"
    android:layout_height="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="23dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_marginStart="-5dp"
            android:background="@drawable/test_view2"
            android:layout_height="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/download"
               />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fancy_bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_timer"
            android:drawablePadding="5dp"
            android:paddingEnd="8dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/fancy_bet"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontFamily="@font/heebo_bold"
            />

        <RelativeLayout
            android:layout_width="70dp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:background="@drawable/test_view3"
            android:layout_height="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="23dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_ques"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>