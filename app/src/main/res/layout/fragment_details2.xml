<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.detail2.Details2Fragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_4_corner_border"
        android:padding="6dp"
        android:src="@drawable/ic_wrong"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cricket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:padding="5dp"
                android:text="@string/cricket"
                android:textColor="@color/text_color_multi"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/bg_multi"
                app:layout_constraintTop_toBottomOf="@id/tv_cricket" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_4_corner_shape"
                    android:backgroundTint="@color/bg_color"
                    android:drawableStart="@drawable/ic_pin_white"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="5dp"
                    android:text="@string/pin"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0.5dp"
                    android:background="@drawable/bg_4_corner_shape"
                    android:backgroundTint="@color/bg_color"
                    android:drawableStart="@drawable/ic_refresh_white"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="5dp"
                    android:text="@string/refresh"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_dark"
                app:layout_constraintTop_toBottomOf="@id/ll_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_match_odds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_20_rounded_grey"
                android:backgroundTint="@color/black"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/match_odds"
                android:textColor="@color/text_yellow"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_up_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/ic_up_down"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_match_odds" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/ic_graph"
                app:layout_constraintStart_toEndOf="@id/iv_up_down"
                app:layout_constraintTop_toBottomOf="@id/tv_match_odds" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_matched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/matched"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:fontFamily="@font/heebo_regular"
                app:layout_constraintStart_toEndOf="@id/iv_market"
                app:layout_constraintTop_toTopOf="@id/iv_market" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/pte"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_market"
                app:layout_constraintStart_toEndOf="@id/iv_market"
                app:layout_constraintTop_toBottomOf="@id/tv_matched" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_dark"
                app:layout_constraintTop_toTopOf="@id/tv_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_match_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_1"
                app:layout_constraintEnd_toStartOf="@id/tv_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_1"
                tools:text="Lok Sabha 2024" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_1"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@color/bg1"
                android:gravity="center"
                android:padding="15dp"
                android:text="--"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/view4"
                app:layout_constraintEnd_toStartOf="@id/tv_2"
                app:layout_constraintStart_toEndOf="@id/tv_match_title"
                app:layout_constraintTop_toBottomOf="@id/iv_market" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                android:background="@color/bg2"
                android:gravity="center"
                android:padding="15dp"
                android:text="--"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/tv_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_1"
                app:layout_constraintTop_toTopOf="@id/tv_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toTopOf="@id/tv_1"
                app:layout_constraintEnd_toEndOf="@id/tv_1"
                app:layout_constraintStart_toStartOf="@id/tv_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lay"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toTopOf="@id/tv_2"
                app:layout_constraintEnd_toEndOf="@id/tv_2"
                app:layout_constraintStart_toStartOf="@id/tv_2" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_dark"
                app:layout_constraintTop_toBottomOf="@id/tv_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_match_title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_3"
                app:layout_constraintEnd_toStartOf="@id/tv_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_3"
                tools:text="Lok Sabha 2024" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_3"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/bg1"
                android:gravity="center"
                android:padding="15dp"
                android:text="--"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/view5"
                app:layout_constraintEnd_toStartOf="@id/tv_4"
                app:layout_constraintStart_toEndOf="@id/tv_match_title_2"
                app:layout_constraintTop_toBottomOf="@id/view4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                android:background="@color/bg2"
                android:gravity="center"
                android:padding="15dp"
                android:text="--"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/tv_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_3"
                app:layout_constraintTop_toTopOf="@id/tv_3" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_dark"
                app:layout_constraintTop_toBottomOf="@id/tv_3" />

            <include
                android:id="@+id/layout_bet"
                layout="@layout/layout_bet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/view5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/layout_bet">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pin_inactive"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bookmaker_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/boookmaker_market"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_pin"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_zero_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/zedo_commission"
                    android:textColor="@color/text_color_multi"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_bookmaker_market"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_i"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F6E1"
                app:layout_constraintTop_toBottomOf="@id/cl_layout">

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_dark"
                    app:layout_constraintTop_toTopOf="@id/tv_5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_match_title_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_5"
                    app:layout_constraintEnd_toStartOf="@id/tv_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_5"
                    tools:text="Lok Sabha 2024" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_5"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@color/bg1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="--"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/view7"
                    app:layout_constraintEnd_toStartOf="@id/tv_6"
                    app:layout_constraintStart_toEndOf="@id/tv_match_title_3"
                    app:layout_constraintTop_toBottomOf="@id/tv_back_2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_6"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:background="@color/bg2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="--"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/tv_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_5"
                    app:layout_constraintTop_toTopOf="@id/tv_5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_back_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/back"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="@id/tv_5"
                    app:layout_constraintStart_toStartOf="@id/tv_5"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_lay_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/lay"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintEnd_toEndOf="@id/tv_6"
                    app:layout_constraintStart_toStartOf="@id/tv_6"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_dark"
                    app:layout_constraintTop_toBottomOf="@id/tv_5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_match_title_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_7"
                    app:layout_constraintEnd_toStartOf="@id/tv_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_7"
                    tools:text="Lok Sabha 2024" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_7"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@color/bg1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="--"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/view8"
                    app:layout_constraintEnd_toStartOf="@id/tv_8"
                    app:layout_constraintStart_toEndOf="@id/tv_match_title_4"
                    app:layout_constraintTop_toBottomOf="@id/view7" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_8"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:background="@color/bg2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="--"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/tv_7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_7"
                    app:layout_constraintTop_toTopOf="@id/tv_7" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_suspend_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="Suspend"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_7"
                    app:layout_constraintEnd_toEndOf="@id/tv_8"
                    app:layout_constraintStart_toStartOf="@id/tv_7"
                    app:layout_constraintTop_toTopOf="@id/tv_7" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_suspend_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="Suspend"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/heebo_bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_5"
                    app:layout_constraintEnd_toEndOf="@id/tv_6"
                    app:layout_constraintStart_toStartOf="@id/tv_5"
                    app:layout_constraintTop_toTopOf="@id/tv_5" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_dark"
                    app:layout_constraintTop_toBottomOf="@id/tv_7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_gradient"
                android:padding="5dp"
                android:src="@drawable/ic_pin_inactive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_layout_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_fancy_bet"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@color/bg3"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="@string/fancy_bet"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_pin"
                app:layout_constraintStart_toEndOf="@id/iv_pin"
                app:layout_constraintTop_toTopOf="@id/iv_pin" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ques"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginStart="-2dp"
                android:background="@drawable/bg_4_corner_shape_dark_grey"
                android:backgroundTint="@color/bg4"
                android:src="@drawable/ic_ques"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_fancy_bet"
                app:layout_constraintStart_toEndOf="@id/tv_fancy_bet"
                app:layout_constraintTop_toTopOf="@id/tv_fancy_bet" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_premium_cricket"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:background="@color/bg_color"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="@string/premium_cricket"
                android:textColor="@color/text_color_multi"
                android:textSize="14sp"
                app:fontFamily="@font/heebo_bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_pin"
                app:layout_constraintStart_toEndOf="@id/iv_ques"
                app:layout_constraintTop_toTopOf="@id/iv_pin" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg3"
                android:paddingHorizontal="5dp"
                android:paddingTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_fancy_bet"
                tools:itemCount="2"
                tools:listitem="@layout/item_detail_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>