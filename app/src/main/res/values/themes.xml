<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Babu88" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Babu88" parent="Base.Theme.Babu88" />

    <style name="Theme.RemoveSplashScreenTheme" parent="Base.Theme.Babu88">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="roundedCorners20dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="roundedCorners8dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorAnimationDuration">2500</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/bg_grey_shape</item>
        <item name="tabIndicatorColor">@null</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorAnimationDuration">2500</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/bg_top_rounded_shape</item>
        <item name="tabIndicatorColor">@null</item>
    </style>

    <style name="TabLayoutStyleWhite" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorAnimationDuration">2500</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/bg_top_rounded_white_shape</item>
        <item name="tabIndicatorColor">@null</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/heebo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="MyThemePopup" parent="@style/Base.Theme.Babu88">
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/base_color_yellow</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>