<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Babu88" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Babu88" parent="Base.Theme.Babu88" />

    <style name="Theme.RemoveSplashScreenTheme" parent="Base.Theme.Babu88">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="roundedCorners20dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorAnimationDuration">2500</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/bg_grey_shape</item>
        <item name="tabIndicatorColor">@null</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/heebo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tabStripEnabled">false</item>
    </style>
</resources>